{
  "name": "tournament-platform-bdd",
  "version": "1.0.0",
  "description": "BDD Tests for Tournament E-Sports Platform",
  "main": "src/index.js",
  "scripts": {
    "test:bdd": "cucumber-js",
    "test:bdd:dev": "cucumber-js --profile dev",
    "test:bdd:ci": "cucumber-js --profile ci",
    "test:bdd:smoke": "cucumber-js --profile smoke",
    "test:bdd:regression": "cucumber-js --profile regression",
    "test:bdd:business": "cucumber-js --profile business-rules",
    "test:bdd:watch": "nodemon --exec 'npm run test:bdd:dev' --watch tests --watch src",
    "test:bdd:debug": "node --inspect-brk ./node_modules/.bin/cucumber-js --profile dev",
    "bdd:report": "open reports/cucumber-report.html",
    "bdd:serve-reports": "http-server reports -p 8080 -o",
    "lint:bdd": "eslint tests/bdd/**/*.js",
    "clean:reports": "rm -rf reports && mkdir -p reports"
  },
  "keywords": [
    "bdd",
    "cucumber",
    "testing",
    "e-sports",
    "tournament",
    "ddd"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@cucumber/pretty-formatter": "^1.0.1",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "nodemon": "^3.0.1",
    "http-server": "^14.1.1",
    "eslint": "^8.48.0"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "lodash": "^4.17.21"
  },
  "cucumber": {
    "requireModule": [
      "ts-node/register"
    ],
    "require": [
      "tests/bdd/support/**/*.js"
    ],
    "format": [
      "progress-bar",
      "html:reports/cucumber-report.html"
    ]
  },
  "directories": {
    "features": "tests/bdd/features",
    "steps": "tests/bdd/steps",
    "support": "tests/bdd/support",
    "reports": "reports"
  },
  "author": "",
  "license": "ISC"
}
